@{
    ViewBag.Title = "NhapThongTin";
    Layout = "~/Views/Shared/_layout.cshtml";
}
<link href="~/Content/ThongTinKhachHang.css" rel="stylesheet" />
<div class="container">
    <div class="row">

        @using (Html.BeginForm("DatHang", "GioHang"))
        {
            <div class="col-sm-12 col-md-4">
                <div class="box box-blue ">
                    <div class="box-header">
                        <h3 class="box-title">
                            <span class="rounded"></span>
                            Thông tin liên hệ
                        </h3>
                    </div>
                    <div class="box-body">

                        <div class="form-group">
                            <label>Họ và tên <small style="color:red" >*</small></label>
                            <input type="text" id="customer_name" class="form-control info_customer_book" name="customer_name" value="">
                            <span class="error_name" style="color:red;font-size:15px"  ></span>
                        </div>
                        <div class="form-group">
                            <label>Số điện thoại <small style="color:red" >*</small></label>
                            <input type="text" id="customer_phone" class="form-control info_customer_book" name="customer_phone" value="">
                             <span class="error_phone" style="color:red;font-size:15px" ></span>
                        </div>
                        <div class="form-group">
                            <label>Email <small style="color:red">*</small></label>
                            <input type="text" id="customer_email" class="form-control info_customer_book" name="customer_email" value="">
                             <span class="error_email" style="color:red;font-size:15px" ></span>
                        </div>
                        <div class="form-group">
                            <label>Địa chỉ<small style="color:red">*</small></label>
                            <input type="text" id="customer_address" class="form-control info_customer_book" name="customer_address" value="">
                            <span class="error_diachi" style="color:red;font-size:15px" ></span>
                        </div>

                        <div class="form-group">

                            <input style="background-color: #5cb85c; border-color: #4cae4c; color: #fff;" id="btn_click_dh" class="form-control" type="submit" value="Đặt Hàng" />

                        </div>

                    </div>
                </div>
            </div>
        }
        <!-- /.box -->
    </div>
    <script type="text/javascript">
        var loi = 0;
        $(".error_name").hide();
        $(".error_phone").hide();
        $(".error_email").hide();
        $(".error_diachi").hide();
        //var error = Array();
        function isValidEmailAddress(emailAddress) {
            var pattern = new RegExp(/^(("[\w-\s]+")|([\w-]+(?:\.[\w-]+)*)|("[\w-\s]+")([\w-]+(?:\.[\w-]+)*))(@@((?:[\w-]+\.)*\w[\w-]{0,66})\.([a-z]{2,6}(?:\.[a-z]{2})?)$)|(@@\[?((25[0-5]\.|2[0-4][0-9]\.|1[0-9]{2}\.|[0-9]{1,2}\.))((25[0-5]|2[0-4][0-9]|1[0-9]{2}|[0-9]{1,2})\.){2}(25[0-5]|2[0-4][0-9]|1[0-9]{2}|[0-9]{1,2})\]?$)/i);
            return pattern.test(emailAddress);
        }
        $("#btn_click_dh").click(function () {

            var email = $("#customer_email").val();
            if ($("#customer_name").val() == "") {
                $(".error_name").show();
                $(".error_name").text("Tên khách hàng không được để trống");
                loi++;

            }
            else {
                $(".error_name").hide();
            }

            if ($("#customer_phone").val() == "" || $("#customer_phone").length == 11) {
                $(".error_phone").show();
                $(".error_phone").text("Số điện thoại không được để trống và 11 ký tự");
                loi++;


            }
            else {
                $(".error_phone").hide();

            }
            if ($("#customer_email").val() == "" || !isValidEmailAddress(email)) {
                $(".error_email").show();
                $(".error_email").text("Email không hợp lệ");
                loi++;


            }
            else {
                $(".error_email").hide();
            }

            if ($("#customer_address").val() == "") {
                $(".error_diachi").show();
                $(".error_diachi").text("Địa chỉ không được bỏ trống");
                loi++;


            }
            else {
                $(".error_diachi").hide();

            }
            

           

         
        
        
            if (loi == 0) 
                return true;
            return false;
            

            

        }
 
            );
     

    </script>

</div>


